<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.htc.dotbreaker"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="19"
        android:targetSdkVersion="22" />

    <uses-permission android:name="android.permission.GET_TASKS" />
    <uses-permission android:name="com.htc.permission.dotviewgame" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/dot_breaker_launcher"
        android:label="@string/app_name" >
        <activity
            android:name="com.htc.dotbreaker.WelcomePageActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Holo.NoActionBar.Fullscreen" >
            <intent-filter>
                <action android:name="com.htc.intent.action.dotviewgame_launch" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.htc.dotbreaker.GameLevel"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:theme="@style/ThemeLight.NoDisplayPreview" >
        </activity>
        <activity
            android:name="com.htc.dotbreaker.GameActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.htc.dotbreaker.GameStats"
            android:screenOrientation="portrait"
            android:theme="@style/ThemeLight.NoDisplayPreview" >
        </activity>
        <activity
            android:name="com.htc.dotbreaker.Settings"
            android:screenOrientation="portrait"
            android:theme="@style/ThemeLight.NoDisplayPreview" >
        </activity>
    </application>

</manifest>